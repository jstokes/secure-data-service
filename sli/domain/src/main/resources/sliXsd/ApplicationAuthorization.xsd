<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:sli="http://slc-sli/ed-org/0.1" elementFormDefault="qualified"
	attributeFormDefault="qualified">
    <xs:include schemaLocation="SimpleTypes.xsd" />

	<xs:element name="applicationAuthorization">
		<xs:complexType>
			<xs:annotation>
			    <xs:documentation>
			         Defines that is allowed to use an application.
			         Typically the application list will be associated with an educational organization.

			    </xs:documentation>
				<xs:appinfo>
					<sli:SecuritySphere>Admin</sli:SecuritySphere>
				</xs:appinfo>
			</xs:annotation>
            <xs:sequence>
                <xs:element name="applicationId" type="xs:string"/>
                <xs:element name="edorgs" minOccurs="0" maxOccurs="unbounded">
                	<xs:complexType>
                		<xs:sequence>
                			<xs:element name="authorized_edorg" type="xs:string"/>
                			<xs:element name="last_authorizing_realm_edorg" type="xs:string" minOccurs="0"/>
                			<xs:element name="last_authorizing_user" type="xs:string" minOccurs="0"/>
                			<xs:element name="last_authorized_date" type="xs:long" minOccurs="0"/>                            
                		</xs:sequence>
                	</xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
	</xs:element>

</xs:schema>

