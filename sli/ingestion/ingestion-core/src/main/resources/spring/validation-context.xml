<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">


    <util:map id="xsd" key-type="java.lang.String" value-type="org.springframework.core.io.Resource">
        <entry key="AssessmentMetadata">
            <value>classpath:edfiXsd/Interchange-AssessmentMetadata.xsd</value>
        </entry>
        <entry key="EducationOrganization">
            <value>classpath:edfiXsd/Interchange-EducationOrganization.xsd</value>
        </entry>
        <entry key="EducationOrgCalendar">
            <value>classpath:edfiXsd/Interchange-EducationOrgCalendar.xsd</value>
        </entry>
        <entry key="HSGeneratedStudentTranscript">
            <value>classpath:edfiXsd/Interchange-HSGeneratedStudentTranscript.xsd</value>
        </entry>
        <entry key="MasterSchedule">
            <value>classpath:edfiXsd/Interchange-MasterSchedule.xsd</value>
        </entry>
        <entry key="StaffAssociation">
            <value>classpath:edfiXsd/Interchange-StaffAssociation.xsd</value>
        </entry>
        <entry key="Student">
             <value>classpath:edfiXsd/Interchange-Student.xsd</value>
        </entry>
        <entry key="StudentAssessment">
            <value>classpath:edfiXsd/Interchange-StudentAssessment.xsd</value>
        </entry>
        <entry key="Attendance">
            <value>classpath:edfiXsd/Interchange-StudentAttendance.xsd</value>
        </entry>
        <entry key="StudentCohort">
            <value>classpath:edfiXsd/Interchange-StudentCohort.xsd</value>
        </entry>
        <entry key="StudentDiscipline">
           <value>classpath:edfiXsd/Interchange-StudentDiscipline.xsd</value>
        </entry>
        <entry key="StudentEnrollment">
            <value>classpath:edfiXsd/Interchange-StudentEnrollment.xsd</value>
        </entry>
        <entry key="StudentGrades">
            <value>classpath:edfiXsd/Interchange-StudentGrade.xsd</value>
        </entry>
        <entry key="Parent">
            <value>classpath:edfiXsd/Interchange-StudentParent.xsd</value>
        </entry>
        <entry key="StudentProgram">
            <value>classpath:edfiXsd/Interchange-StudentProgram.xsd</value>
        </entry>
    </util:map>

    <bean id="xsdValidator" class="org.slc.sli.ingestion.validation.XsdValidator">
        <property name="xsd" ref="xsd" />
    </bean>


    <util:map id="saxToIngestionErrorCodes" key-type="java.lang.String" value-type="java.lang.String">
        <entry key="cvc-attribute.3" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-attribute.4" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.3.1" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.3.2.1" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.3.2.2" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.5.1" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.5.2" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-elt.3.1" value="XSD_INVALID_ATTRIBUTE" />
        <entry key="cvc-complex-type.4" value="XSD_MISSING_ATTRIBUTE" />
        <entry key="cvc-datatype-valid.1.2.1" value="XSD_INVALID_VALUE" />
        <entry key="cvc-datatype-valid.1.2.2" value="XSD_INVALID_VALUE" />
        <entry key="cvc-datatype-valid.1.2.3" value="XSD_INVALID_VALUE" />
        <entry key="cvc-complex-type.2.1" value="XSD_NO_CHILDREN" />
        <entry key="cvc-complex-type.2.4.d" value="XSD_NO_CHILDREN" />
        <entry key="cvc-elt.3.2.1" value="XSD_NO_CHILDREN" />
        <entry key="cvc-elt.5.2.2.1" value="XSD_NO_CHILDREN" />
        <entry key="cvc-type.3.1.2" value="XSD_NO_CHILDREN" />
        <entry key="cvc-complex-type.2.2" value="XSD_NO_CHILDREN" />
        <entry key="cvc-complex-type.2.3" value="XSD_NO_CHILDREN" />
        <entry key="cvc-elt.1" value="XSD_INVALID_ELEMENT" />
        <entry key="cvc-elt.5.2.2.2.1" value="XSD_VALUE_DOESNT_MATCH" />
        <entry key="cvc-elt.5.2.2.2.2" value="XSD_VALUE_DOESNT_MATCH" />
        <entry key="cvc-complex-type.2.4.a" value="XSD_ELEMENT_OUT_OF_ORDER" />
        <entry key="cvc-type.3.1.3" value="XSD_INVALID_CONTENT" />
        <entry key="cvc-complex-type.2.4.b" value="XSD_INCOMPLETE_CONTENT" />
        <entry key="cvc-complex-type.2.4.c" value="XSD_ELEMENT_MISSING" />
        <entry key="cvc-type.3.1.1" value="XSD_ELEMENT_CANNOT_HAVE_ATTRIBUTES" />
        <entry key="cvc-enumeration-valid" value="XSD_ENUMERATION_VALUE_NOT_ALLOWED" />
        <entry key="cvc-fractionDigits-valid " value="XSD_TOO_MANY_FRACTION_DIGITS" />
        <entry key="cvc-length-valid" value="XSD_INCORRECT_LENGTH" />
        <entry key="cvc-minLength-valid" value="XSD_LENGTH_TOO_SMALL" />
        <entry key="cvc-maxLength-valid" value="XSD_LENGTH_TOO_LARGE" />
        <entry key="cvc-maxExclusive-valid" value="XSD_VALUE_TOO_LARGE" />
        <entry key="cvc-maxInclusive-valid" value="XSD_VALUE_TOO_LARGE" />
        <entry key="cvc-minExclusive-valid" value="XSD_VALUE_TOO_SMALL" />
        <entry key="cvc-minInclusive-valid" value="XSD_VALUE_TOO_SMALL" />
        <entry key="cvc-pattern-valid" value="XSD_INCORRECT_FORMAT" />
        <entry key="cvc-totalDigits-valid" value="XSD_TOO_MANY_DIGITS" />
        <entry key="UNKNOWN-CVC-CODE" value="XSD_UNKNOWN" />
    </util:map>

    <bean id="xsdErrorHandler" class="org.slc.sli.ingestion.validation.XsdErrorHandler">
        <property name="saxToIngestionErrorCodes" ref="saxToIngestionErrorCodes" />
        <property name="messageSource" ref="messageSource" />
    </bean>

      <bean id="controlFileValidator"
    class="org.slc.sli.ingestion.landingzone.validation.ControlFileValidator">
    <property name="ingestionFileValidators">
      <list>
        <bean
          class="org.slc.sli.ingestion.landingzone.validation.FileFormatValidator" />
        <bean
          class="org.slc.sli.ingestion.landingzone.validation.FileTypeValidator" />
        <bean
          class="org.slc.sli.ingestion.landingzone.validation.ChecksumValidator" />
      </list>
    </property>
  </bean>

  <bean id="zipFileValidator"
    class="org.slc.sli.ingestion.landingzone.validation.ZipFileValidator">
  </bean>

    <bean id="messageSource"
    class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>messages</value>
      </list>
    </property>
  </bean>

</beans>
