<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       ">

  <bean id="smooksConfigMap" class="org.springframework.beans.factory.config.MapFactoryBean">
    <property name="targetMapClass">
      <value>java.util.HashMap</value>
    </property>
    <property name="sourceMap">
      <map>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_EDUCATION_ORGANIZATION}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.school}</value>
                <value>${smooks.targetselector.xml.stateEducationAgency}</value>
                <value>${smooks.targetselector.xml.localEducationAgency}</value>
                <value>${smooks.targetselector.xml.course}</value>
                <value>${smooks.targetselector.xml.program}</value>
                <value>${smooks.targetselector.xml.competencyLevelDescriptorEdOrg}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_EDUCATION_ORG_CALENDAR}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.session}</value>
                <value>${smooks.targetselector.xml.gradingPeriod}</value>
                <value>${smooks.targetselector.xml.calendarDate}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_MASTER_SCHEDULE}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.section}</value>
                <value>${smooks.targetselector.xml.courseOffering}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>

        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STAFF_ASSOCIATION}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.teacher}</value>
                <value>${smooks.targetselector.xml.teacher.section}</value>
                <value>${smooks.targetselector.xml.teacher.school}</value>
                <value>${smooks.targetselector.xml.staff}</value>
                <value>${smooks.targetselector.xml.staff.ed.org.assignment}</value>
                <value>${smooks.targetselector.xml.staff.program.association}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_ATTENDANCE}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.attendance}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_ENROLLMENT}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.student.school}</value>
                <value>${smooks.targetselector.xml.student.section}</value>
                <value>${smooks.targetselector.xml.student.graduationPlan}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_ASSESSMENT_METADATA}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                
                <value>${smooks.targetselector.xml.assessment}</value>
                <value>${smooks.targetselector.xml.objective.assessment}</value>
                <value>${smooks.targetselector.xml.assessment.item}</value>
                <value>${smooks.targetselector.xml.assessmentFamily}</value>
                <value>${smooks.targetselector.xml.learningObjective}</value>
                <value>InterchangeAssessmentMetadata/AssessmentPeriodDescriptor</value>
                <value>InterchangeAssessmentMetadata/LearningStandard</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_ASSESSMENT}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.student.assessment}</value>
                <value>${smooks.targetselector.xml.student.objective.assessment}</value>
                <value>${smooks.targetselector.xml.student.assessment.item}</value>
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_GRADES}">
          <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
            <constructor-arg value="${smooks.config.all.xml}" />
            <constructor-arg>
              <list>
                <value>${smooks.targetselector.xml.studentCompetencyObjective}</value>
                <value>${smooks.targetselector.xml.student.gradebookEntry}</value>
                <value>${smooks.targetselector.xml.student.courseTranscript}</value>
                <value>${smooks.targetselector.xml.student.studentGradebookEntry}</value>
                <value>${smooks.targetselector.xml.student.studentAcademicRecord}</value>
                <value>${smooks.targetselector.xml.grade}</value>
                <value>${smooks.targetselector.xml.reportCard}</value>
                <value>${smooks.targetselector.xml.studentCompetency}</value>
                <value>${smooks.targetselector.xml.competencyLevelDescriptorStudentGrade}</value>
                 <value>InterchangeStudentGrade/LearningObjective</value>
               
              </list>
            </constructor-arg>
          </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_PARENT_ASSOCIATION}">
           <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
              <constructor-arg value="${smooks.config.all.xml}" />
              <constructor-arg>
                <list>
                  <value>${smooks.targetselector.xml.student.parent.student}</value>
                  <value>${smooks.targetselector.xml.student.parent.parent}</value>
                  <value>${smooks.targetselector.xml.student.parent.association}</value>
                </list>
              </constructor-arg>
            </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_PROGRAM}">
           <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
              <constructor-arg value="${smooks.config.all.xml}" />
              <constructor-arg>
                <list>
                  <value>${smooks.targetselector.xml.student.program.association}</value>
                </list>
              </constructor-arg>
            </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_COHORT}">
           <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
              <constructor-arg value="${smooks.config.all.xml}" />
              <constructor-arg>
                <list>
                  <value>${smooks.targetselector.xml.cohort}</value>
                  <value>${smooks.targetselector.xml.student.cohort}</value>
                  <value>${smooks.targetselector.xml.staff.cohort}</value>
                </list>
              </constructor-arg>
            </bean>
        </entry>
        <entry key="#{T(org.slc.sli.ingestion.FileType).XML_STUDENT_DISCIPLINE}">
           <bean class="org.slc.sli.ingestion.smooks.SliSmooksConfig">
              <constructor-arg value="${smooks.config.all.xml}" />
              <constructor-arg>
                <list>
                  <value>${smooks.targetselector.xml.disciplineIncident}</value>
                  <value>${smooks.targetselector.xml.disciplineAction}</value>
                  <value>${smooks.targetselector.xml.student.disciplineIncident}</value>
                </list>
              </constructor-arg>
            </bean>
        </entry>
      </map>
    </property>
  </bean>

  <!-- SLI-Ed-Fi neutral record types for which record level hash processing is supported -->
  <util:set id="recordLvlHashNeutralRecordTypes" set-class="java.util.HashSet" value-type="java.lang.String">
    <value>calendarDate</value>
    <value>cohort</value>
    <value>competencyLevelDescriptor</value>
    <value>course</value>
  <!--     <value>courseOffering</value> -->
    <value>disciplineAction</value>
    <value>disciplineIncident</value>
    <value>educationOrganization</value>
    <value>grade</value>
    <value>gradebookEntry</value>
    <value>gradingPeriod</value>
    <value>graduationPlan</value>
    <value>learningStandard</value>
    <value>localEducationAgency</value>
    <value>parent</value>
    <value>program</value>
    <value>reportCard</value>
    <value>school</value>
  <!--     <value>section</value> -->
    <value>session</value>
    <value>staff</value>
    <value>staffCohortAssociation</value>
    <value>staffEducationOrganizationAssociation</value>
    <value>staffProgramAssociation</value>
    <value>stateEducationAgency</value>
    <value>student</value>
    <value>studentAcademicRecord</value>
    <value>studentCohortAssociation</value>
    <value>studentCompetency</value>
    <value>studentCompetencyObjective</value>
    <value>studentDisciplineIncidentAssociation</value>
    <value>studentParentAssociation</value>
    <value>studentProgramAssociation</value>
  <!--    <value>studentSchoolAssociation</value>  -->
    <value>studentSectionAssociation</value>
    <value>studentGradebookEntry</value>
    <value>teacher</value>
    <value>teacherSchoolAssociation</value>
    <value>teacherSectionAssociation</value>
    <value>attendance</value>
    <value>learningObjective</value>
    <value>courseTranscript</value>
  </util:set>
  
  <bean id="deterministicUUIDGeneratorStrategy" class="org.slc.sli.common.util.uuid.DeterministicUUIDGeneratorStrategy"/>

  <bean id="sliSmooksFactory" class="org.slc.sli.ingestion.smooks.SliSmooksFactory">
    <property name="sliSmooksConfigMap">
      <ref bean="smooksConfigMap" />
    </property>
    <property name="beanId" value="${smooks.config.bean.id}" />
    <property name="nrMongoStagingWriter" ref="neutralRecordMongoAccess" />
    <property name="batchJobDAO" ref="batchJobMongoDA" />
    <property name="dIdStrategy" ref="deterministicUUIDGeneratorStrategy" />
    <property name="dIdResolver" ref="deterministicIdResolver" />
    <property name="recordLevelDeltaEnabledEntities" ref="recordLvlHashNeutralRecordTypes" />
  </bean>

</beans>
