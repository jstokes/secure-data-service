<?xml version="1.0" encoding="UTF-8"?>

<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" xmlns:core="http://www.milyn.org/xsd/smooks/smooks-core-1.4.xsd"
  xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.3.xsd" xmlns:camel="http://www.milyn.org/xsd/smooks/camel-1.4.xsd"
  xmlns:csv="http://www.milyn.org/xsd/smooks/csv-1.2.xsd">

  <params>
    <param name="stream.filter.type">SAX</param>
    <param name="terminate.on.visitor.exception">false</param>
  </params>

  <csv:reader
    fields="TeacherReference_StaffIdentity_StaffUniqueStateId,
    SchoolReference_EducationalOrgIdentity_StateOrganizationId,
    ProgramAssignment,
    InstructionalGradeLevels_GradeLevel,
    AcademicSubjects_AcademicSubject
    ">

  </csv:reader>

  <!-- TeacherSchoolAssociation Mapping -->
  <jb:bean beanId="record" class="org.slc.sli.ingestion.NeutralRecord" createOnElement="csv-record">

    <jb:expression property="recordType">'teacherSchoolAssociation'</jb:expression>

    <jb:wiring property="attributes" beanIdRef="teacherSchoolAttributes" />

    <jb:wiring property="localParentIds" beanIdRef="teacherSchoolAssociationParentIds" />
  </jb:bean>

  <jb:bean beanId="teacherSchoolAssociationParentIds" class="java.util.HashMap" createOnElement="csv-record">
    <jb:value property="Teacher" data="TeacherReference_StaffIdentity_StaffUniqueStateId" />
    <jb:value property="School" data="SchoolReference_EducationalOrgIdentity_StateOrganizationId" />
  </jb:bean>

  <jb:bean beanId="teacherSchoolAttributes" class="java.util.HashMap" createOnElement="csv-record">
    <!-- TeacherReference -->
    <jb:value property="teacherId" data="TeacherReference_StaffIdentity_StaffUniqueStateId" />

    <!-- SchoolReference -->
    <jb:value property="schoolId" data="SchoolReference_EducationalOrgIdentity_StateOrganizationId"  />

    <!-- ProgramAssignment -->
    <jb:value property="programAssignment" data="ProgramAssignment" />

    <!-- InstructionGradeLevels -->
    <jb:wiring property="instructionalGradeLevels" beanIdRef="GradeLevelsTypeArray" />

    <!-- AcademicSubjects -->
    <jb:wiring property="academicSubjects" beanIdRef="AcademicSubjectsTypeArray" />
  </jb:bean>

  <!--School Reference -->
  <jb:bean beanId="SchoolReferenceTypeArray" class="java.util.ArrayList" createOnElement="csv-record">
    <jb:value data="SchoolReference_EducationalOrgIdentity_StateOrganizationId" />
  </jb:bean>

  <!--Gradelevels -->
  <jb:bean beanId="GradeLevelsTypeArray" class="java.util.ArrayList" createOnElement="csv-record">
    <jb:value data="InstructionalGradeLevels_GradeLevel" />
  </jb:bean>

  <!--AcademicSubjects -->
  <jb:bean beanId="AcademicSubjectsTypeArray" class="java.util.ArrayList" createOnElement="csv-record">
    <jb:value data="AcademicSubjects_AcademicSubject" />
  </jb:bean>

</smooks-resource-list>
