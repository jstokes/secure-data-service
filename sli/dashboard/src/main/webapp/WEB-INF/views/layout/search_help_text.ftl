    <form class="form">
        <input type="text" placeholder="First Name" class="input-small">
        <input type="password" placeholder="Smith" class="input-small">
    </form>

    <p>Or</p>

    <form class="form">
        <input type="text" placeholder="Benjamin" class="input-small">
        <input type="password" placeholder="Smith" class="input-small">
    </form>

