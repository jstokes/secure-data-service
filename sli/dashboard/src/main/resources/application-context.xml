<?xml version="1.0" encoding="UTF-8"?>

<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- the application context definition for the DispatcherServlet -->
    
    <!-- controllers -->
    <bean name="/studentlist"        class="org.slc.sli.controller.StudentListController">
        <property name="schoolManager" ref="schoolManager"/>
    </bean>
    <bean name="/studentlistcontent" class="org.slc.sli.controller.StudentListContentController">
        <property name="configManager"     ref="configManager"/>
        <property name="studentManager"    ref="studentManager"/>
        <property name="assessmentManager" ref="assessmentManager"/>
    </bean>
    
    <!-- managers -->
    <bean id="manager" class="org.slc.sli.manager.Manager" abstract="true">
        <property name="apiClient" ref="APIClientBean"/>
    </bean>
    <bean id="assessmentManager" class="org.slc.sli.manager.AssessmentManager" parent="manager"/>
    <bean id="configManager"     class="org.slc.sli.manager.ConfigManager"     parent="manager"/>
    <bean id="schoolManager"     class="org.slc.sli.manager.SchoolManager"     parent="manager"/>
    <bean id="studentManager"    class="org.slc.sli.manager.StudentManager"    parent="manager"/>
    
    
    
    <!-- Redirect view --> 
    <bean name="/" class="org.slc.sli.controller.LandingPageController">
      <property name="url" value="studentlist" />
    </bean>
    
    <!-- freemarker config -->
    <bean  id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/WEB-INF/views/"/>
    </bean>
 
    <bean id="viewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="cache" value="false"/>
        <property name="prefix" value=""/>
        <property name="suffix" value=".ftl"/>
    </bean>
    
    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="locations">
		    <list>
			    <value>classpath:/filter-${env}.properties</value>
		    </list>
	    </property>
    </bean>
    
    <bean id="SpringPropertiesHandlingBean" class="org.slc.sli.entity.SpringPropertiesTest">
    <property name="name" value="${my.name}" />
    </bean>
    
    <!-- api client -->
    <bean id="APIClientBean" class="org.slc.sli.client.${apiclient}APIClient" />
     
</beans>
