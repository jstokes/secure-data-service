<?xml version="1.0" encoding="UTF-8"?>

<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- the application context definition for the DispatcherServlet -->
    
    <bean name="/appselector" class="org.slc.sli.controller.AppSelectorController"/>
    <bean name="/studentlist" class="org.slc.sli.controller.StudentListController">
      <property name="apiClient" ref="APIClientBean"/>
    </bean>
    <bean name="/studentlistcontent" class="org.slc.sli.controller.StudentListContentController">
      <property name="apiClient" ref="APIClientBean"/>
      <property name="liveClient" ref="liveClient" />
    </bean>

    <!-- Redirect view --> 
    <bean name="/" class="org.slc.sli.controller.LandingPageController">
      <property name="url" value="studentlist" />
    </bean>
    
    <!-- freemarker config -->
    <bean  id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/WEB-INF/views/"/>
    </bean>
 
    <bean id="viewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="cache" value="false"/>
        <property name="prefix" value=""/>
        <property name="suffix" value=".ftl"/>
    </bean>
    
    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="locations">
		    <list>
			    <value>classpath:/filter-${env}.properties</value>
		    </list>
	    </property>
    </bean>
    
    <bean id="SpringPropertiesHandlingBean" class="org.slc.sli.entity.SpringPropertiesTest">
    <property name="name" value="${my.name}" />
    </bean>
    
    <bean id="APIClientBean" class="${apiclientclass}" />


<bean id= "liveClient" class="org.slc.sli.client.LiveAPIClient">
    <property name="restClient" ref="restClient" />
</bean>
     
</beans>
