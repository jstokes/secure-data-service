<% if @landingzone[:isDuplicate] && @landingzone[:preload]!=nil && @landingzone[:preload]!="" %>
<div class="page-header">
      <h1>Select Sandbox Data Source</h1>
    </div>
    <div class="alert alert-error">
    <p>The system is currently processing your previous ingesion job and can not load the sample data you selected.</p>
    <p>Please contact <%= APP_CONFIG['support_email'] %> for further questions.</p>
    </div>
    <div class="hidden" id="alreadyProvisioned"/>
<%elsif @landingzone[:isDuplicate]%>
    <div class="page-header">
      <h1>Landing Zone Settings</h1>
    </div>
    <div class="alert alert-error">
    <p>Your landing zone for <%= @landingzone[:edOrg] %> has already been provisioned.</p>
    <p>To access your landing zone, please SFTP to <%=@landingzone[:server]%> with using your SLC username and password.</p>
    <p>Please contact <%= APP_CONFIG['support_email'] %> for further questions.</p>
    </div>
    <div class="hidden" id="alreadyProvisioned"/>
<% else %>
    <div class="page-header">
      <h1>
        <% if APP_CONFIG['is_sandbox'] %>
            Select Sandbox Data Source
        <% else %>
            Create a Landing Zone for your Data
        <% end %>
      </h1>
    </div>
    <%# TODO: This doesn't look *exactly* like the wireframe %>
    <% if @landingzone[:preload]!=nil && @landingzone[:preload]!=""%>
    <div class="alert alert-success">
        <i class="icon-ok"></i> The system is loading the sample data set you selected. The corresponding data will appear in the data browser application once this process is complete. Please be aware that the time it takes for the data to load varies. For support, contact <%= APP_CONFIG['support_email'] %>
    </div>
    <%else%>
    <div class="alert alert-success">
        <i class="icon-ok"></i> Your landing zone was successfully provisioned on <%= @landingzone[:server] %>. You will receive an email with further instructions about uploading the data.
        <p>For support, contact <%= APP_CONFIG['support_email'] %></p> 
    </div>
    <%end%>
    <div class="hidden" id="successMessage"/>
<% end %>

<div class="form-actions">
  <%= link_to "OK", APP_CONFIG['portal_url'], :class =>"btn btn-primary" %>
</div>


