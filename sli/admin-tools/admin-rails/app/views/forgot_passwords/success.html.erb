<div class="page-header">
  <h1>Password Success</h1>
</div>
<% if notice != nil %>
    <ul style="color:green">
      <li id="successNotice"><%= notice %></li>
    </ul>

    <%= link_to 'Log in', home_path %>

<% else if flash[:error] %>
        <div id="error_explanation">
          <%= flash[:error] %>
        </div>
    <% end %>
<% end %>
