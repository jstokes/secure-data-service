<%= form_for(app, :remote => true) do |f| %>
<div class = "field">
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
</div>
<div class = "field">
	<%= f.label :description, "Description" %>
	<%= f.text_field :description %>
</div>
<div class = "field">
	<%= f.label :version, "Version" %>
	<%= f.text_field :version %>
</div>
<div class = "field">
	<% f.fields_for :developer_info do |dev| %>
		<%= dev.label :organization, "Vendor" %>
		<%= dev.text_field :organization %>
	<% end %>
</div>
<div class = "field">
	<%= f.label :application_url, "Url" %>
	<%= f.text_field :application_url %>
</div>
<div class = "field">
	<%= f.label :administration_url, "Admin Url" %>
	<%= f.text_field :administration_url %>
</div>
<div class = "field">
	<%= f.label :redirect_uri, "Redirect Url" %>
	<%= f.text_field :redirect_uri %>
</div>
<div class = "field">
	<%= image_tag app.image_url, :title => "Image", :class => "app-image" %>
	<%= f.label :image_url, "Image Url" %>
	<%= f.text_field :image_url %>
</div>
<div class = "actions">
	<%= f.submit "Submit", :disable_with => 'Submiting...' %>
</div>
<% end %>