	<%= notice %>
</div>
<%= render "index_dev" unless controller.operator? %>
<%= render "index_op" if controller.operator? %>

<script type="text/javascript" charset="utf-8">
	jQuery(document).ready(function() {
		jQuery.noConflict();
		jQuery(':input:enabled').attr('disabled', true);
		jQuery("a.edit-link").click(function() {
			//Enable input on this form.
			var set = null;
			set = jQuery(this).closest("tr").next().find(':input:not(.read_only):disabled');
			if(set.length == 0) {
			jQuery(this).closest("tr").next().find(':input:not(.read_only):enabled').attr('disabled', true);
			}
			else {
				set.removeAttr('disabled');
				
			}

		});
		jQuery("#applications tr:odd").addClass("odd");
		        jQuery("#applications tr:not(.odd)").hide();
		        jQuery("#applications tr:first-child").show();
		        
		        jQuery("#applications tr.odd").click(function(){
		            jQuery(this).next("tr").slideToggle();
		            // $(this).find(".arrow").toggleClass("up");
		        });
	});
</script>
