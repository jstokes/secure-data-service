<%= form_for(user, :html => {:class => "form-horizontal"}) do |f| %>

<fieldset>
<div class = "control-group">
	<%= f.label :fullName, "Full Name",:class => "control-label" %>
	<div class="controls">
	<%= f.text_field :fullName %>
	</div>
</div>
</fieldset>

<fieldset>
<div class = "control-group">
	<%= f.label :email, "Email",:class => "control-label" %>
	<div class="controls">
	<%= f.text_field :email %>
	</div>
</div>
</fieldset>

<fieldset>
<div class = "control-group">
	<%= f.label :edorg, "EdOrg" , :class => "control-label" %>
	<div class="controls">
	<%= f.select :edorg,  @edorgs, {},:include_blank => true %>
	</div>
</div>
</fieldset>

<fieldset>
<div class = "control-group">
	<%= f.label :primary_role, "Role" ,:class => "control-label" %>
	<div class="controls">
	<%= f.select :primary_role, @sandbox_roles,{},:include_blank => true %>
	</div>
</div>
</fieldset>

<fieldset>
<div class = "control-group">
	<%= f.label :optinal_role_1, "Optional Permissions" ,:class => "control-label" %>
	<div class="controls">
	<label class="checkbox">
	<%= f.check_box :optional_role_1,{:id => "application_developer_role"},"Application Developer" %>Application Developer
	</label>
	</div>
	<div class="controls">
	<label class="checkbox">
	<%= f.check_box :optional_role_2,{:id => "ingestion_user_role"},"Ingestion User" %>Ingestion User
	</label>
	</div>
	
</div>
</fieldset>

<fieldset>
<div class = "form-actions">
	<%= f.submit "Save", :class => "btn btn-primary" %>
	<%= link_to "Cancel", "/users",:class => "btn" %>
</div>
</fieldset>
<% end %>

