<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.slc.sli.modeling</groupId>
		<artifactId>modeling</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>sdkgen</artifactId>
	<name>sdkgen (Java SDK Generator)</name>

	<properties>
      <sli.home>${project.parent.parent.basedir}</sli.home>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.slc.sli.modeling</groupId>
			<artifactId>jgen</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.slc.sli.modeling</groupId>
			<artifactId>rest</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.slc.sli.modeling</groupId>
			<artifactId>wadl</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>net.sf.jopt-simple</groupId>
			<artifactId>jopt-simple</artifactId>
			<version>4.3</version>
		</dependency>
		<dependency>
			<groupId>maven-plugins</groupId>
			<artifactId>maven-javaapp-plugin</artifactId>
			<!-- Forced to use this version rather than 1.4 due to transitive dependencies. -->
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>org.slc.sli.modeling</groupId>
			<artifactId>xsd</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>

    </dependencies>

  <profiles>
    <profile>
      <id>live</id>
      <dependencies>
        <dependency>
          <groupId>org.slc.sli</groupId>
          <artifactId>scaffold</artifactId>
          <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.slc.sli.modeling</groupId>
          <artifactId>waudit</artifactId>
          <version>1.0-SNAPSHOT</version>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.1</version>
            <executions>
              <execution>
                <id>run scaffold</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <executable>mvn</executable>
                  <commandlineArgs>clean install -P apidoc -f ${sli.home}/scaffold/pom.xml</commandlineArgs>
                </configuration>
              </execution>
              <execution>
                <id>copy wadl</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <executable>cp</executable>
                  <commandlineArgs>${sli.home}/scaffold/target/doc/eapplication.wadl ${sli.home}/modeling/sdkgen/src/main/resources/</commandlineArgs>
                </configuration>
              </execution>
              <execution>
                <id>wadl audit</id>
                <goals>
                  <goal>java</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <mainClass>org.slc.sli.modeling.waudit.WadlAudit</mainClass>
                  <arguments>
                    <argument>--outFolder</argument>
                    <argument>${sli.home}/modeling/sdkgen/src/main/resources</argument>
                    <argument>--wadlFile</argument>
                    <argument>${sli.home}/modeling/sdkgen/src/main/resources/eapplication.wadl</argument>
                    <argument>--documentFile</argument>
                    <argument>${sli.home}/domain/src/main/resources/sliModel/documents.xml</argument>
                    <argument>--xmiFile</argument>
                    <argument>${sli.home}/domain/src/main/resources/sliModel/SLI.xmi</argument>
                    <argument>--outFile</argument>
                    <argument>sli.wadl</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>sdkgen</id>
            <phase>package</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.slc.sli.modeling.sdkgen.SdkGen</mainClass>
              <arguments>
                <argument>--outFolder</argument>
                <argument>${sli.home}/modeling/shtick/src/main/java/org/slc/sli/shtick</argument>
                <argument>--wadlFile</argument>
                <argument>${sli.home}/domain/src/main/resources/sliModel/SLI.wadl</argument>
                <argument>--package</argument>
                <argument>org.slc.sli.shtick</argument>
                <argument>--xmiFile</argument>
                <argument>${sli.home}/domain/src/main/resources/sliModel/SLI.xmi</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
