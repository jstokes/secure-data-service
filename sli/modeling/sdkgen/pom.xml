<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.slc.sli.modeling</groupId>
    <artifactId>modeling</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>sdkgen</artifactId>
  <name>sdkgen (Java SDK Generator)</name>

  <properties>
    <sli.home>${project.parent.parent.basedir}</sli.home>
    <sli.conf>${sli.home}/config/properties/sli.properties</sli.conf>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.slc.sli.modeling</groupId>
      <artifactId>jgen</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slc.sli.modeling</groupId>
      <artifactId>rest</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slc.sli.modeling</groupId>
      <artifactId>wadl</artifactId>
    </dependency>
    <dependency>
      <groupId>net.sf.jopt-simple</groupId>
      <artifactId>jopt-simple</artifactId>
      <version>4.3</version>
    </dependency>
    <dependency>
      <groupId>maven-plugins</groupId>
      <artifactId>maven-javaapp-plugin</artifactId>
      <!-- Forced to use this version rather than 1.4 due to transitive dependencies. -->
      <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>org.slc.sli.modeling</groupId>
      <artifactId>xsd</artifactId>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>live</id>
      <dependencies>
        <dependency>
          <groupId>org.slc.sli</groupId>
          <artifactId>scaffold</artifactId>
        </dependency>
        <dependency>
          <groupId>org.slc.sli.modeling</groupId>
          <artifactId>waudit</artifactId>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <version>1.0-alpha-2</version>
            <executions>
              <execution>
                <phase>compile</phase>
                <goals>
                  <goal>read-project-properties</goal>
                </goals>
                <configuration>
                  <files>
                    <file>${sli.conf}</file>
                  </files>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.1</version>

            <executions>
              <execution>
                <id>grab-wadl</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <executable>curl</executable>
                  <commandlineArgs>
                    ${api.server.url}api/rest/application.wadl > ${project.basedir}/src/main/resources/eapplication.wadl
                  </commandlineArgs>
                </configuration>
              </execution>

              <execution>
                <id>wadl-merge</id>
                <phase>compile</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <configuration>
                  <mainClass>org.slc.sli.scaffold.MergeDocuments</mainClass>
                  <arguments>
                    <argument>${project.basedir}/src/main/resources/eapplication.wadl</argument>
                    <argument>${project.basedir}/src/main/resources/wadl-merge.xml</argument>
                    <argument>eapplication.wadl</argument>
                  </arguments>
                </configuration>
              </execution>

              <execution>
                <id>wadl audit</id>
                <goals>
                  <goal>java</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <mainClass>org.slc.sli.modeling.waudit.WadlAudit</mainClass>
                  <arguments>
                    <argument>--outFolder</argument>
                    <argument>${project.basedir}/src/main/resources</argument>
                    <argument>--wadlFile</argument>
                    <argument>${project.basedir}/src/main/resources/eapplication.wadl</argument>
                    <argument>--documentFile</argument>
                    <argument>${sli.home}/domain/src/main/resources/sliModel/documents.xml</argument>
                    <argument>--xmiFile</argument>
                    <argument>${sli.home}/domain/src/main/resources/sliModel/SLI.xmi</argument>
                    <argument>--outFile</argument>
                    <argument>sli.wadl</argument>
                  </arguments>
                </configuration>
              </execution>

              <execution>
                <id>create pojo directory</id>
                <goals>
                  <goal>exec</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <executable>mkdir</executable>
                  <commandlineArgs>-p ${sli.home}/modeling/shtick/src/main/java/org/slc/sli/shtick/pojo</commandlineArgs>
                </configuration>
              </execution>

              <execution>
                <id>sdkgen</id>
                <goals>
                  <goal>java</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <mainClass>org.slc.sli.modeling.sdkgen.SdkGen</mainClass>
                  <arguments>
                    <argument>--outFolder</argument>
                    <argument>${sli.home}/modeling/shtick/src/main/java/org/slc/sli/shtick</argument>
                    <argument>--wadlFile</argument>
                    <argument>${project.basedir}/src/main/resources/sli.wadl</argument>
                    <argument>--package</argument>
                    <argument>org.slc.sli.shtick</argument>
                    <argument>--xmiFile</argument>
                    <argument>${sli.home}/domain/src/main/resources/sliModel/SLI.xmi</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
