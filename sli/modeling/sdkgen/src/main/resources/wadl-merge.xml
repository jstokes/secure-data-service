<?xml version="1.0" encoding="UTF-8"?>

<merges>
  <!-- Remove all query parameters -->
  <merge type="node" action="delete" xpath="//param[@style='query']" />

  <!-- Remove unwanted resources -->
  <merge type="node" action="delete" xpath="//resource[@path='v1/metrics']" />
  <merge type="node" action="delete" xpath="//resource[@path='v1/tenant_metrics']" />
  <merge type="node" action="delete" xpath="//resource[@path='v1/system/support']" />
  <merge type="node" action="delete" xpath="//resources/resource[not(starts-with(@path, 'v1'))]" />

  <!-- Add grammars -->
  <merge type="node" action="add" xpath="//grammars">
      <include href="../../../../../domain/src/main/resources/sliModel/SLI.xsd" />
  </merge>
</merges>
