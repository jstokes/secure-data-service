<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.slc.sli.common</groupId>
    <artifactId>common</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>common-test-data</artifactId>
  <packaging>jar</packaging>

  <name>Test Data</name>

  <dependencies>
  		<dependency>
		  <groupId>com.google.code.gson</groupId>
		  <artifactId>gson</artifactId>
			<version>${gson.version}</version>
		</dependency>
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <!-- run the py script to generate the xml files -->
          <executable>python</executable>
          <arguments>
            <argument>src/main/python/generate-testdata.py</argument>
            <!-- arg1 - specify directory in which to find csvs -->
            <argument>src/main/resources/csvs</argument>
            <!-- arg2 - specify directory in which to place output xml -->
            <argument>target/xml</argument>
          </arguments>
        </configuration>
        <inherited>false</inherited>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <version>1.0</version>
        <extensions>false</extensions>
        <inherited>false</inherited>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>validate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <validationSets>
            <validationSet>
              <dir>target/xml</dir>
              <systemId>Interchange-Student.xsd</systemId>
              <includes>
                <include>InterchangeStudent.xml</include>
              </includes>
            </validationSet>
            <validationSet>
              <dir>target/xml</dir>
              <systemId>Interchange-StudentEnrollment.xsd</systemId>
              <includes>
                <include>InterchangeEnrollment.xml</include>
              </includes>
            </validationSet>
            <validationSet>
              <dir>target/xml</dir>
              <systemId>Interchange-EducationOrganization.xsd</systemId>
              <includes>
                <include>InterchangeSchool.xml</include>
              </includes>
            </validationSet>
            <validationSet>
              <dir>target/xml</dir>
              <systemId>Interchange-StaffAssociation.xsd</systemId>
              <includes>
                <include>InterchangeStaffAssociation.xml</include>
              </includes>
            </validationSet>
          </validationSets>
          <catalogs>
            <catalog>src/main/resources/catalog.xml</catalog>
          </catalogs>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
