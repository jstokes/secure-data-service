<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>org.slc.sli</groupId>
      <artifactId>sli</artifactId>
      <version>1.0-SNAPSHOT</version>
   </parent>

    <artifactId>acceptance.tests</artifactId>
   <packaging>pom</packaging>
    <name>acceptance.tests</name>

   <dependencies>

        <dependency>
            <groupId>org.slc.sli</groupId>
            <artifactId>api</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.slc.sli</groupId>
            <artifactId>dashboard</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.slc.sli.ingestion</groupId>
            <artifactId>ingestion-service</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
		
        <dependency>
            <groupId>org.slc.sli.client.sample</groupId>
            <artifactId>sample</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
		
        <dependency>
            <groupId>org.slc.sli</groupId>
            <artifactId>simple-idp</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
		
   </dependencies>

   <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <version>1.2.1</version>

                <executions>
                    <execution>
                        <id>start-container</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-container</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <container>
                        <containerId>tomcat7x</containerId>
                        <type>Installed</type>
                        <log>target/tomcat7x/logs/tomcat7x.log</log>
                        <output>target/tomcat7x/logs/tomcat7x.log</output>

						<zipUrlInstaller>
						<url>http://mirrors.ibiblio.org/apache/tomcat/tomcat-7/v7.0.27/bin/apache-tomcat-7.0.27.zip</url>
						<downloadDir>target/tomcat7x/downloads</downloadDir>
						<extractDir>target/tomcat7x/extracts</extractDir>
						</zipUrlInstaller>                    
					</container>

                    <configuration>
                        <properties>
                            <cargo.logging>low</cargo.logging>
							<cargo.jvmargs>${TOMCAT_OPTS}</cargo.jvmargs>
                        </properties>
                        <deployables>
                            <deployable>
                                <groupId>org.slc.sli</groupId>
                                <artifactId>api</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>/api</context>
                                </properties>
                            </deployable>

                            <deployable>
                                <groupId>org.slc.sli</groupId>
                                <artifactId>dashboard</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>/dashboard</context>
                                </properties>
                            </deployable>

                            <deployable>
                                <groupId>org.slc.sli.ingestion</groupId>
                                <artifactId>ingestion-service</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>/ingestion</context>
                                </properties>
                            </deployable>

                            <deployable>
                                <groupId>org.slc.sli</groupId>
                                <artifactId>simple-idp</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>/simple-idp</context>
                                </properties>
                            </deployable>

                           <deployable>
                                <groupId>org.slc.sli.client.sample</groupId>
                                <artifactId>sample</artifactId>
                                <type>war</type>
                                <properties>
                                    <context>/sample</context>
                                </properties>
                            </deployable>
							
                        </deployables>
                    </configuration>
                </configuration>
            </plugin>

         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>

            <executions>
               <execution>
                        <id>run tests</id>
                        <phase>integration-test</phase>
                  <goals>
                     <goal>exec</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
                  <executable>bundle</executable>
               <arguments>
                  <argument>exec</argument>
                  <argument>rake</argument>
				  <argument>dashboard_server_address=http://local.slidev.org:8080/dashboard</argument>
				  <argument>fullSuite</argument>
               </arguments>
            </configuration>
         </plugin>

      </plugins>

    </build>
</project>
