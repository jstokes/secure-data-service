{
  "student": {
    "fields": [
      "body.name.firstName",
      "body.name.middleName",
      "body.name.lastSurname",
      "body.otherName.firstName",
      "body.otherName.middleName",
      "body.otherName.lastSurname"
    ],
    "mapping": {
      "student": {
        "properties": {
          "context": {
            "properties": {
              "schoolId": {
                "type": "string",
                "index": "not_analyzed"
              }
            }
          }
        }
      }
    }
  },
  "studentSchoolAssociation": {
    "indexType": "student",
    "fields": [
      "body.studentId",
      "body.schoolId",
      "body.exitWithdrawDate"
    ],
    "rename": {
      "body.studentId": "_id",
      "body.schoolId": "body.context.schoolId",
      "body.exitWithdrawDate": "metaData.exitWithdrawDate"
    },
    "filterCondition": {
      "body.exitWithdrawDate": null
    },
    "mapping": {}
  },
  "learningStandard": {
    "fields": [
      "body.contentStandard",
      "body.courseTitle",
      "body.description",
      "body.gradeLevel",
      "body.learningStandardId.identificationCode",
      "body.subjectArea"
    ],
    "append": {
      "body.context.schoolId" : "ALL"
    },
    "mapping": {
      "learningStandard": {
        "properties": {
          "context": {
            "properties": {
              "schoolId": {
                "type": "string",
                "index": "not_analyzed"
              }
            },
            "learningStandardId": {
              "properties": {
                "identificationCode": {
                  "type": "string",
                  "index": "not_analyzed"
                }
              }
            },
            "contentStandard": {
              "type": "string",
              "analyzer": "lowercase_analyzer"
            },
            "courseTitle": {
              "type": "string",
              "boost": 2.0
            },
            "description": {
              "type": "string",
              "boost": 1.0
            },
            "gradeLevel": {
              "type": "string",
              "analyzer": "lowercase_analyzer"
            },
            "subjectArea": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}