<!DOCTYPE html>
<html>
  <head>
    <title>SLC Data Browser</title>
	<%= stylesheet_link_tag    "application" %>
 	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div id="header">
        <% if @header.nil? %>
  			<div class="left">
  				<h1>The SLC Data Browser</h1>
                <span><i>Navigate your data through the SLC API.</i></span>
  			</div>
  			<div class="right">
  				<h4 style="display:inline;">Hello <%= session[:full_name] %> | <%= link_to 'Home', :root %> | <%= link_to 'Logout', '/logout'  %> </h4>
  				<div class="search">
                  <%= render 'entities/search'%>
    			</div>
  			</div>
          <% else %>
            <%= @header.to_s %>
          <% end%>
  	  </div>
    	<div id="content">
    		<%- flash.each do |key, msg| -%>
    		  <div id="flash" class="flash-<%= key %>">
    		    <p style="float:right;"><%= link_to_function 'X', "jQuery('#flash').fadeToggle()" %></p>
    		    <p><%= msg %></p>
    		    <div class="clear"></div>
    		  </div>
    		<%- end -%>
		
    		<%= yield %>
    	</div>
    	<div id="left-bar">
    	</div>
    	<div id="footer">
          <%= @footer.to_s unless @footer.nil? %>
    	</div>
	  </div>

  </body>
</html>
