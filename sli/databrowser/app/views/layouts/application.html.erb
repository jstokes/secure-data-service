<!DOCTYPE html>
<html>
  <head>
    <title>SLI Data Browser</title>
	<%= stylesheet_link_tag    "application" %>
 	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
  </head>
  <body>
    <div class="header">
		<p>
			<span style="float:left; color:#f00;">
				<h1 style="display:inline">SLI Data Browser</h1>
				<h4 style="display:inline;"><i>version: PI 3, Sprint 4</i></h4>
			</span>
			<span style="float:right; ">
				<h1 style="display:inline"></h1>
				<h4 style="display:inline;">Hello <%= session[:full_name] %> | <%= link_to 'Home', :root %> | <%= link_to 'Logout', '/logout'  %> </h4>
			</span> 
		</p>
	</div>
	<hr>
	<div id="content">
		<%- flash.each do |key, msg| -%>
		  <div id="<%= key %>">
		    <p style="float:right;"><%= link_to_function 'X', "jQuery('##{key}').fadeToggle()" %></p>
		    <p><%= msg %></p>
		    <div class="clear"></div>
		  </div>
		<%- end -%>
		<%= yield %>
	</div>
	<div id="left-bar">
	</div>
	<div id="footer">
	</div>

  </body>
</html>
