{{#entity}}
  <AttendanceEvent>
    <EventDate>{{event_date}}</EventDate>
    <AttendanceEventType>{{type_str}}</AttendanceEventType>
    <AttendanceEventCategory>{{category_str}}</AttendanceEventCategory>
    {{#reason}}
    <AttendanceEventReason>{{reason}}</AttendanceEventReason>
    {{/reason}}
    <EducationalEnvironment>{{environment_str}}</EducationalEnvironment>
    <StudentReference>
      <StudentIdentity>
        <StudentUniqueStateId>{{student}}</StudentUniqueStateId>
      </StudentIdentity>
    </StudentReference>
    <SchoolReference>
      <EducationalOrgIdentity>
        <StateOrganizationId>{{ed_org_id}}</StateOrganizationId>
      </EducationalOrgIdentity>
    </SchoolReference>
    {{#session_reference}}
    <SessionReference>
      <SessionIdentity>
        <EducationalOrgReference>
          <EducationalOrgIdentity>
            <StateOrganizationId>{{ed_org_id}}</StateOrganizationId>
          </EducationalOrgIdentity>
        </EducationalOrgReference>
        <SessionName>{{.}}</SessionName>
      </SessionIdentity>
    </SessionReference>
    {{/session_reference}}
    {{#section_reference}}
    <SectionReference>
      <SectionIdentity>
        <EducationalOrgReference>
          <EducationalOrgIdentity>
            <StateOrganizationId>{{ed_org_id}}</StateOrganizationId>
          </EducationalOrgIdentity>
        </EducationalOrgReference>
        <UniqueSectionCode>{{.}}</UniqueSectionCode>
      </SectionIdentity>
    </SectionReference>
    {{/section_reference}}
  </AttendanceEvent>
{{/entity}}
