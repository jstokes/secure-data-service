<h3>Failing Test Leaderboard</h3>

<%= form_tag("/features", :method => :get) do %>
  <%= label_tag(:component_filter, "Component:") %>
  <%= select_tag(:component_filter, options_for_select(controller.getComponentOptions), :include_blank => true) %>
  <%= submit_tag "Filter" %>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Feature Name</th>
			<th>Component</th>
			<th># Failures</th>
		</tr>
	</thead>
	<tbody>
	<% @features.each { |feature| %>
		<tr>
			<td><%=feature[:name]%></td>
			<td><%=feature[:component]%></td>
			<td><%=feature[:count]%></td>
		</tr>
	<% } %>
	</tbody>
</table>
