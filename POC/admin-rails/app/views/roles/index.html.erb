<h1>Listing roles</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Rights</th>
		<th>Actions</th>
		<th></th>
	</tr>

	<% @roles.each do |role| %>
	<tr>
		<td><%= role.name %></td>
	</tr>
	<tr>
		<td><%= role.rights.join(', ') %></td>
	</tr>
	<tr>
		<td><%= link_to 'Show', role %></td>
		<td><%= link_to 'Edit', edit_role_path(role) %></td>
	</tr>

	<% end %>
</table>
<br />
